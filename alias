# shortcut commands
alias g='short-git'
alias v='vagrant'

# command replacements
command -v gsed >/dev/null && alias sed='gsed'
command -v ggrep >/dev/null && alias grep='ggrep'
command -v bat >/dev/null && alias cat='bat --theme OneHalfDark'
