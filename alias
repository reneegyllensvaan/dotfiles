alias rr='ranger'
alias sx='startx;exit'
alias up='cd ..'
alias lass='ls --color=always -lAh | less -R'
alias ncdu="ncdu --color dark -rr -x --exclude .git --exclude node_modules"

# temporary time alias as a protest against homebrew
which brew >/dev/null && alias brew='time brew'

# clipboard aliases
which xsel >/dev/null && alias xc='xsel -b'
which xsel >/dev/null && alias xs='xsel'
which pbcopy >/dev/null && alias xc='pbcopy'
which pbpaste >/dev/null && alias xp='pbpaste'

which opam >/dev/null && alias op='opam'

# linux-specific aliases
#which yaourt >/dev/null && alias yaourt='yaourt --color'
which yaourt >/dev/null && alias yao='yaourt'

# editor aliases
alias vi='vim'
alias fim='vim `fzf`'
alias eme='emacsclient -nw --socket-name=default'
#alias vim='nvim'
#alias vi='nvim'
#alias v='nvim'

# unglob some commands
alias fd='noglob fd'

# shortcut commands
#alias g='short-git'
alias g='git'
alias fab='comfortable-fab'
alias v='vagrant'

# unglob some commands
alias fd='noglob fd'
alias fdi='noglob fd -I'
alias rg='noglob rg'
#alias rg='noglob   --color=auto --exclude-dir={.bzr,CVS,.git,.hg,.svn}'

# command replacements
command -v gsed >/dev/null && alias sed='gsed'
command -v ggrep >/dev/null && alias grep='ggrep'
command -v bat >/dev/null && alias cat='bat'
[[ -f /usr/local/bin/nasm ]] && alias nasm='/usr/local/bin/nasm'
