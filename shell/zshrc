# Environment Plugins }}}
# Options {{{
# autocd: invoking just a directory name as a command will cd to that directory
setopt AUTOCD

# pathdirs: invoking `foo/bar.sh` will run `/usr/bin/foo/bar.sh`
setopt pathdirs

# beep: should we send a beep character on errors?
unsetopt beep
# Options }}}

for f in ~/.zshrc.d/*; do
  source $f
done

true
