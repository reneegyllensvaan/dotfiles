# Do not edit this file, it's generated from a template. Instead, edit
# /Users/renee/dotfiles/shell/alias.tmpl.sh in dotfiles/shell

source ~/.alias-generated

alias f='pop-mark'
alias m='mark-dir'

# I always forget the OS X lld equivalent :/
which lld >/dev/null 2>&1 || alias lld='otool -L'

alias arst='asdf'
alias ncdu="ncdu --color dark -rr -x"
# alias ncdu="ncdu --color dark -rr -x --exclude .git --exclude node_modules"
alias nim="nim --outdir:~/.nimble/_out"
alias openv="eval \$(opam env)"

alias fim='f=`fd . -t f | fzy` && ${VISUAL:-$EDITOR} "$f"' # use fzf to select a file but only open on return 1

# Default flags:
alias diff='diff -u'
alias kak="kak -c default"

# Shortcuts:
alias g='git'
alias gs='git status'
alias gr='grep'
alias l='less'
alias v='vagrant'
alias rr='ranger'
alias sx='startx;exit'
alias fab=comfortable-fab
alias nm1=notmuch-primary
alias nm2=notmuch-secondary
alias hed='head -n 20'
alias hed1='head -n 10'
alias hed2='head -n 20'
alias hed3='head -n 30'

# unglob some commands
alias fd='noglob fd'
alias fdi='noglob fd -I'
alias rg='noglob rg'
alias w3m='noglob w3m'
alias jq='noglob jq'
alias yq='noglob yq'
alias expr='noglob expr'  # multiplication lol
