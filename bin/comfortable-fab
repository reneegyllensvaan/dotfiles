#!/usr/bin/env zsh
[ "$BISON_BACKEND" ] && source $BISON_BACKEND/.venv/bin/activate

function join {
  delim="$1";
  shift
  while [ "$1" ]; do
    printf "`echo "$1" | gsed -E 's/ /\\ /g'`"
    shift
    [ "$1" ] && printf $delim
  done
}
cmd=$1
shift
if [ "$1" ]; then
  command="$cmd:`join ',' "$@"`"
else
  command=$cmd
fi

BACKEND_TRIGGERS=(
  'command:api'
  'webserver:'
  'db_'
)
FRONTEND_TRIGGERS=(
  'watcher:'
)
for t in $BACKEND_TRIGGERS; do
  echo $command | grep -E "$t">/dev/null && cd ~/backend
done
for t in $FRONTEND_TRIGGERS; do
  echo $command | grep -E "$t" >/dev/null && cd ~/frontend
done

echo "fab '$command'"
fab "$command"
