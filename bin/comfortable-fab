#!/bin/sh
function join {
  delim="$1";
  shift
  while [ "$1" ]; do
    printf "$1"
    shift
    [ "$1" ] && printf ","
  done
}
cmd=$1
shift
if [ "$1" ]; then
  echo "$cmd:`join , "$@"`"
  command="$cmd:`join , "$@"`"
else
  echo $cmd
  command=$cmd
fi

[ `echo $command | grep 'command:api'` ] && cd ~/Projects/backend/repo
fab $command
