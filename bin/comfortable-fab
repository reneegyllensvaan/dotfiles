#!/bin/sh
function join {
  delim="$1";
  shift
  while [ "$1" ]; do
    printf "`echo "$1" | gsed -E 's/ /\\ /g'`"
    shift
    [ "$1" ] && printf $delim
  done
}
cmd=$1
shift
if [ "$1" ]; then
  command="$cmd:`join ',' "$@"`"
else
  command=$cmd
fi

BACKEND_TRIGGERS=(
  'command:api'
  'webserver:'
  'db_(restore\|upgrade\|revision\|downgrade)'
)
FRONTEND_TRIGGERS=(
  'watcher:'
)
for t in $BACKEND_TRIGGERS; do
  [ `echo $command | grep "$t"` ] && cd ~/Projects/backend/repo
done
for t in $FRONTEND_TRIGGERS; do
  [ `echo $command | grep "$t"` ] && cd ~/Projects/frontend/repo
done

echo "fab '$command'"
fab "$command"
