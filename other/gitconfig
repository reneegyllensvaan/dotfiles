# ex: fdm=marker
[include]
  path = ~/.gitconfig-generated

[core]
  excludesfile = ~/.gitignore_global
[gpg]
  program = gpg
[status]
	relativePaths = true
[hub]
  protocol = ssh
[init]
  defaultBranch = trunk
[rerere]
	enabled = true
[fetch]
	prune = true
[rebase]
	autostash = true
	autosquash = true
[core]
    pager = delta
[interactive]
    diffFilter = delta --color-only


[maintenance]
	strategy = incremental
	auto = true
[maintenance "gc"]
	enable = true
[maintenance "commit-graph"]
	enable = true
[maintenance "prefetch"]
	enable = true
[maintenance "loose-objects"]
	enable = true
[maintenance "incremental-repack"]
	enable = true

[alias]
  # Briefs: {{{
  a   = add
  aa  = add --all

  b   = branch

  c   = commit
  ca  = commit --amend
  canoe = commit --amend --no-edit
  canoera = commit --amend --no-edit --reset-author
  cp  = cherry-pick

  d   = diff
  ds  = diff --staged

  f   = fetch
  fo  = fetch origin

  l   = log
  lo  = log --pretty=oneline

  o   = checkout

  pm  = pull --rebase=false
  pr  = pull --rebase
  pf  = pull --ff-only
  pushu   = "! git push -u origin `git branch --show-current`"
  pushfwl = push --force-with-lease

  r   = rebase
  rc  = rebase --continue
  ri  = rebase -i
  r-h  = reset --hard
  back  = "! git reset --hard @~${1}"

  s   = status

  w   = worktree
  wl  = worktree list

  z   = stash
  za  = "! [ $1 ] && git stash apply stash@{${1}} || git stash apply"
  zl  = stash list
  zs  = stash show
  # Briefs }}}

  pop = stash pop
  fixup = "! hash=$(git log --pretty=oneline | head -n 100 | fzy) && git commit --fixup $(echo $hash | awk '{print $1}')"
  ls-files-root = "! git ls-files"
  root = "! pwd"

[advice]
  addEmptyPathspec = false

[tig "color"]
	cursor		= default	0 underline
	title-blur	= white	blue
	title-focus	= white	blue	bold
[tig "color.tree"]
	date		= cyan	default	bold

[delta]
    features = side-by-side line-numbers decorations
    whitespace-error-style = 22 reverse
[delta "decorations"]
    commit-decoration-style = bold yellow box ul
    file-style = bold yellow ul
    file-decoration-style = none
[filter "tabspace"]
	smudge = gunexpand --tabs=4 --first-only
	clean = gexpand --tabs=4 --initial
[filter "lfs"]
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
